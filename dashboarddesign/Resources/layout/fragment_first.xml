<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:padding="10dp"
    tools:context=".MainActivity">
    <Toolbar
        android:id="@+id/toolbar33"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Dashboard"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage"
            
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageWhishlist"
                    android:contentDescription="@null"
                    android:src="@drawable/joe"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar33"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="150dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroundstyleforcardview"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@android:color/white"
                android:text="January"
                android:id="@+id/monthtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:id="@+id/unittext"
                android:textSize="25sp"
                android:text="$ 500"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_marginTop="20dp"
                android:progress="70"
                android:background="#9016"
                android:progressDrawable="@drawable/progress"
                android:id="@+id/pb"
                android:layout_width="300dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unittext"
                android:layout_height="5dp"
                style="?android:attr/progressBarStyleHorizontal" />
            <ImageView
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toTopOf="@+id/percentagetext"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/graphimg"
                app:layout_constraintStart_toEndOf="@+id/pb"
                android:src="@drawable/ic_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                  android:layout_marginTop="43dp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/graphimg"
                android:id="@+id/percentagetext"
                android:text="70%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Daily spend target:$16.67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"
        android:id="@+id/lineardailyspends"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:text="Daily spends"
            android:textColor="#bebebf"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#2c62ff"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="See All"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineardailyspends"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_height="220dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/cardview2style"
            android:padding="10dp"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:id="@+id/lineardailyspends2"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:text="Whishlist"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#2c62ff"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="See All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <HorizontalScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineardailyspends2"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage0"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2c62ff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_home2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Tee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage1"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2bc999"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_dumbell"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Gym"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage2"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#fbb41a"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bike"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Bike"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage3"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#ff5e5b"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_bag"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Saving"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage4"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#34afff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_sports"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="tee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="7dp"
                android:id="@+id/cardimage5"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#2c62ff"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_home2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="tee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
